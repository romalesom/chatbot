{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.17/MicrosoftTeams.schema.json",
    "manifestVersion": "1.17",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "developer": {
        "name": "Bee 360",
        "websiteUrl": "https://www.bee360.com/",
        "privacyUrl": "https://www.bee360.com/privacy-policy/",
        "termsOfUseUrl": "https://www.bee360.com/imprint/"
    },
    "icons": {
        "color": "logo2.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Bee360 Notifications",
        "full": "Bee360  Notification Bot"
    },
    "description": {
        "short": "Bot for Notifications triggered by Bee360",
        "full": "Bot for Notifications about Responsiblities, Activities or Followed Items which are triggered by Bee360 and are also displayed in Bee360 as notifications. You can manage and configure your notifications in Bee360 Web and App "
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "personal"
            ],
            "supportsFiles": false,
            "isNotificationOnly": false
        }
    ],
    "composeExtensions": [],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}